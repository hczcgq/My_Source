<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center" >

    <FrameLayout
        android:id="@+id/tweet_pub_voice_rcd_hint_rcding"
        android:layout_width="180.0dip"
        android:layout_height="180.0dip"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/tweet_pub_voice_rcd_hint_anim_area"
            android:layout_width="180.0dip"
            android:layout_height="180.0dip"
            android:background="@drawable/tweet_voice_rcd_hint_bg"
            android:gravity="bottom|center"
            android:layout_gravity="center"
            android:minWidth="140.0dip"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="15.0dip"
                android:layout_marginLeft="35.0dip"
                
                android:src="@drawable/tweet_voice_rcd_hint" android:contentDescription="TODO"/>

            <ImageView
                android:id="@+id/tweet_pub_voice_rcd_hint_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView1"
                android:layout_marginLeft="4.0dip"
                android:layout_toRightOf="@+id/imageView1"
                android:src="@drawable/tweet_amp1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:layout_below="@+id/imageView1"
                android:layout_marginBottom="5.0dip"
                android:layout_gravity="center"
                android:gravity="bottom|center"
                android:minWidth="140.0dip"
                android:paddingBottom="3.0dip"
                android:paddingLeft="3.0dip"
                android:paddingRight="3.0dip"
                android:text="@string/tweet_chatfooter_cancel_rcd"
                android:textColor="#ffffff"
                android:textSize="13.0dip" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tweet_pub_voice_rcd_hint_cancel_area"
            android:layout_width="180.0dip"
            android:layout_height="180.0dip"
            android:background="@drawable/tweet_voice_rcd_hint_bg"
            android:layout_gravity="center"
            android:minWidth="180.0dip"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/tweet_pub_voice_rcd_hint_cancel_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20.0dip"
                android:src="@drawable/tweet_rcd_cancel_icon" />

            <TextView
                android:id="@+id/tweet_pub_voice_rcd_hint_cancel_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5.0dip"
                android:background="@drawable/tweet_rcd_cancel_bg"
                android:gravity="center"
                android:minWidth="180.0dip"
                android:paddingBottom="3.0dip"
                android:paddingLeft="3.0dip"
                android:paddingRight="3.0dip"
                android:text="@string/tweet_chatfooter_cancel_rcd_release"
                android:textColor="#000000"
                android:textSize="13.0dip" />
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/tweet_pub_voice_rcd_hint_loading"
        android:layout_width="140.0dip"
        android:layout_height="140.0dip"
        android:background="@drawable/tweet_voice_rcd_hint_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/tweet_pub_progressBar1"
            style="@style/tweet_largeCustomProgressBar"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tweet_pub_voice_rcd_hint_tooshort"
        android:layout_width="140.0dip"
        android:layout_height="140.0dip"
        android:background="@drawable/tweet_voice_rcd_hint_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:src="@drawable/tweet_voice_to_short" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tweet_chatfooter_too_short"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>